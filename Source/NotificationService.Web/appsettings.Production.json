{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Information"
    }
  },
  "AllowedHosts": "*",
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogLevel": "info",
    "internalLogFile": "${basedir}/logs/internal-nlog.log",
    "extensions": [
      { "assembly": "NLog.Web.AspNetCore" },
      { "assembly": "Sentry.NLog" }
    ],
    "targets": {
      "erorrsFileTarget": {
        "type": "File",
        "fileName": "${basedir}/logs/errors.log",
        "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"
      },
      "debugFileTarget": {
        "type": "File",
        "fileName": "${basedir}/logs/debug.log",
        "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}"
      },
      "sentry": {
        "type": "Sentry",
        "dsn": "",
        "layout": "${message}",
        "breadcrumbLayout": "${message}",
        "minimumBreadcrumbLevel": "Debug",
        "minimumEventLevel": "Warn",
        "options": {
          "environment": "development",
          "attachStacktrace": true,
          "sendDefaultPii": true,
          "shutdownTimeoutSeconds": 5,
          "includeEventDataOnBreadcrumbs": true
        },
        "tags": [
          {
            "name": "logger",
            "layout": "${logger}"
          },
          {
            "name": "source",
            "layout": "nlog"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "writeTo": "sentry"
      },
      {
        "logger": "*",
        "writeTo": "debugFileTarget",
        "minLevel": "Trace"
      },
      {
        "logger": "*",
        "writeTo": "erorrsFileTarget",
        "minLevel": "Error"
      }
    ]
  },
  "MongoSettings": {
    "ConnectionString": "",
    "CollectionName": ""
  },
  "RabbitConfiguration": {
    "Host": "",
    "UserName": "",
    "Password": "",
    "QueueName": "",
    "ExchangeName": "",
    "Routingkey": "",
    "MaxParallelization": 10
  },
  "AuthorizationSettings": {
    "RequiredRoles": [
      ""
    ]
  },
  "SmtpClientSettings": {
    "Host": "",
    "Port": 0,
    "EnableSsl": false,
    "DefaultEmail": "",
    "UserName": "",
    "Password": ""
  },
  "EmailSettings": {
    "RetryCountsWithExponentialWaitTime": 15
  }
}
